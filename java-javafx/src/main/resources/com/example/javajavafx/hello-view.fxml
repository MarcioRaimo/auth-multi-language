<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.javajavafx.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>

  <Label prefWidth="Infinity" text="E-mail" />
  <TextField fx:id="emailField" />
  <Label prefWidth="Infinity" text="Senha" />
  <TextField fx:id="passwordField" />
  <Button prefWidth="Infinity" text="Autenticar" onAction="#authClick"/>
  <Button prefWidth="Infinity" text="Registrar" onAction="#registerClick"/>
</VBox>
